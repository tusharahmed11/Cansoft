<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cansoft.app.fragments.SeoFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <com.cansoft.app.widget.IconTextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:tint="@color/grey_60"
                            android:text="@string/icon_user"
                            android:textSize="28sp"
                            tools:ignore="VectorDrawableCompat" />


                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="match_parent" />

                        <EditText
                            android:id="@+id/seo_audit_name"
                            android:padding="14dp"
                            android:hint="Full Name"
                            android:textColorHint="@color/grey_500"
                            android:inputType="text"
                            android:background="@drawable/txt_area_dark_yellow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_middle" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <com.cansoft.app.widget.IconTextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:text="@string/icon_phone"
                            android:textSize="28sp"
                            android:tint="@color/grey_60" />

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColorHint="@color/grey_500"
                            android:id="@+id/seo_audit_phone"
                            android:padding="14dp"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:background="@drawable/txt_area_dark_yellow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

