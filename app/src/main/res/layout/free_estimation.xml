<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:layout_width="340dp"
    android:layout_height="wrap_content">
    <TextView

        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/seo_assessment_close"
        android:text="X"
        android:textColor="@color/grey_1000"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp" />


    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/seo_audit_nameL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/seo_assessment_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:inputType="text"
                        android:textColor="@android:color/white"
                        />
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/seo_assessment_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone number"
                        android:inputType="phone"
                        android:textColor="@android:color/white"
                        />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/seo_assessment_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email address"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/white"
                        />

                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/seo_assessment_pages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="How many pages you want?"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/white"
                        />

                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />
                <Spinner
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/design_mind_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />
                <Spinner
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/google_search_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/seo_assessment_existing_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your existing website URL(if any)"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/white"
                        />

                </android.support.design.widget.TextInputLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <Spinner
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/hav_domain_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/domain_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/seo_assessment_domain_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your domain URL"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/white"
                        />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />


                <Spinner
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/hosting_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <!--<android.support.design.widget.TextInputLayout
                    android:id="@+id/seo_audit_addressL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Website Address"
                        android:inputType="textWebEditText"
                        android:textColor="@android:color/white"
                        />

                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/seo_audit_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Which City/Cities you want to rank higher?"
                        android:inputType="text"
                        android:textColor="@android:color/white"
                        />

                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/seo_audit_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Where do you rank now?"
                        android:inputType="text"
                        android:textColor="@android:color/white"
                        />

                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_middle" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/seo_audit_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey_40">

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="What are your key search terms?"
                        android:inputType="text"
                        android:textColor="@android:color/white"
                        />

                </android.support.design.widget.TextInputLayout>-->

                <Button
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/shadow"
                    android:id="@+id/seo_assessment_btn"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:elevation="6dp"
                    android:text="Submit"
                    tools:targetApi="lollipop" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>




</LinearLayout>