                          android:text="Mobile"
                          />-->

                  </LinearLayout>




              </RelativeLayout>

            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.cansoft.app.widget.IconTextViewSolid
                    android:id="@+id/team_email_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/icon_solid_mail"
                    android:textSize="25sp" />
