                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/team_email_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/grey_900"
                        android:gravity="center"
                        android:text="email@email.com"
                        />
                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Work"
                        />-->

                </LinearLayout>




            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/twitter_layout"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.cansoft.app.widget.IconTextView2
                    android:id="@+id/twitter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/icon_twitter"
                    android:textSize="28sp" />

                    <TextView
                        android:id="@+id/team_twitter"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="17sp"
                        android:textColor="@color/grey_900"
                        android:layout_toEndOf="@+id/twitter_icon"
                        android:layout_toRightOf="@+id/twitter_icon"
                        android:gravity="center"
                        android:text="twitter" />
                </RelativeLayout>
            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.cansoft.app.widget.IconTextView2
                    android:id="@+id/facebook_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/icon_facebook"
                    android:textSize="28sp" />

                   <!-- <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/facebook_icon"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/facebook_icon"
                        />-->

                    <TextView
                        android:id="@+id/team_facebook"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="17sp"
                        android:layout_toEndOf="@+id/facebook_icon"
                        android:layout_toRightOf="@+id/facebook_icon"
                        android:gravity="center"
                        android:textColor="@color/grey_900"
                        android:text="facebook" />
                </RelativeLayout>


